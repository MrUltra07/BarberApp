@model IEnumerable<BarberApp.Models.Appointment>

@{
    var customerName = Context.Session.GetString("CustomerName");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Geçmiş Randevularım</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    
    <div class="container mt-5">
        <h2 class="text-center">Geçmiş Randevularım</h2>

        @if (Model != null && Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Randevu Tarihi</th>
                        <th scope="col">Çalışan</th>
                        <th scope="col">Yetenek</th>
                        <th scope="col">Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.Date</td>
                            <td>@appointment.Employee.Name</td>
                            <td>@appointment.Skill.Title</td>
                            <td>@appointment.Status.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">Henüz geçmiş bir randevunuz yok.</div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
